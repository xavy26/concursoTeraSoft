<!DOCTYPE html>
<html>

<head>
  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!--Import materialize.css-->
  <link type="text/css" rel="stylesheet" href="/css/materialize.min.css" media="screen,projection" />
  <title>
    <%= title %>
  </title>

  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>


<body>

  <%- include('../header') %>

    <h1 class="center"><%if(service){%>Actualización<%}else{%>Registro<%}%> de servicio</h1>

    <div class="container">
      <form action="/service/<%if(service){%>update/<%= service._id %><%}else{%>save<%}%>" method="post">
        <div class="row">
          <div class="input-field col s12 m6">
            <i class="material-icons prefix">person</i>
            <input name="name" id="name" type="text" class="validate" <%if(service){%>value="<%= service.name %>"<%}%>>
            <label for="name">Nombre</label>
          </div>
          <div class="input-field col s12 m6">
            <i class="material-icons prefix">badge</i>
            <input name="time" id="time" type="number" class="validate" <%if(service){%>value="<%= service.time %>"<%}%>>
            <label for="time">Tiempo de atención</label>
          </div>
        </div>
        <div class="row center">
          <button class="btn waves-effect waves-light" type="submit" name="action">Enviar
            <i class="material-icons right">send</i>
          </button>
        </div>
      </div>
      </form>
    </div>

    <%- include('../footer') %>

</body>

</html>
