<!DOCTYPE html>
<html>

<head>
  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <!--Import materialize.css-->
  <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />
  <title>
    <%= title %>
  </title>

  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body>

  <%- include('header') %>

    <h1 class="center">Regsitro de horario</h1>

    <div class="container">
      <form action="schelude/save" method="post">
        <div class="row">
          <label class="col s2">
            <input id="Lunes" name="Lunes" type="checkbox" />
            <span>Lunes</span>
          </label>
          <label class="col s2">
            <input id="Martes" name="Martes" type="checkbox" />
            <span>Martes</span>
          </label>
          <label class="col s2">
            <input id="Miercoles" name="Miercoles" type="checkbox" />
            <span>Miercoles</span>
          </label>
          <label class="col s2">
            <input id="jueves" name="Jueves" type="checkbox" />
            <span>Jueves</span>
          </label>
          <label class="col s2">
            <input id="viernes" name="Viernes" type="checkbox" />
            <span>Viernes</span>
          </label>
        </div>
        <h4>Primera jornada</h4>
        <div class="row">
          <div class="input-field col s12 m6">
            <i class="material-icons prefix">person</i>
            <input name="start1" id="start1" type="time" class="validate">
            <label for="start1">Hora inicio</label>
          </div>
          <div class="input-field col s12 m6">
            <i class="material-icons prefix">badge</i>
            <input name="end1" id="end1" type="time" class="validate">
            <label for="end1">Hora fin</label>
          </div>
        </div>
        <h4>Segunda jornada</h4>
        <div class="row">
          <div class="input-field col s12 m6">
            <i class="material-icons prefix">person</i>
            <input name="start2" id="start2" type="time" class="validate">
            <label for="start2">Hora inicio</label>
          </div>
          <div class="input-field col s12 m6">
            <i class="material-icons prefix">badge</i>
            <input name="end2" id="end2" type="time" class="validate">
            <label for="end2">Hora fin</label>
          </div>
        </div>
        <div class="row center">
          <button class="btn waves-effect waves-light" type="submit" name="action">Enviar
            <i class="material-icons right">send</i>
          </button>
        </div>
      </div>
      </form>
    </div>

    <%- include('footer') %>

</body>

</html>